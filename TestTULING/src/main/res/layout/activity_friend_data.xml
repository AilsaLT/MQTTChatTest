<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/rv_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary">
        <TextView
            android:id="@+id/tv_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="好友资料"
            android:textSize="20sp"
            android:textColor="#fff"/>
        <ImageView
            android:id="@+id/iv_back"
            android:clickable="true"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            android:src="@drawable/arrow_back"/>
    </RelativeLayout>


    <LinearLayout
        android:id="@+id/lv_information"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical"
        android:layout_below="@+id/rv_title"
        android:paddingLeft="2dp"
        android:paddingRight="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal">




            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/image_head"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center_vertical" />


            <TextView
                android:id="@+id/username1"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:text="用户名"
                android:textSize="20sp"/>

        </LinearLayout>
        <View
            android:id="@+id/view1"
            android:layout_width="fill_parent"
            android:layout_height="4px"

            android:background="?android:attr/listDivider"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_sex"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:text="性别："
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/sex1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="150dp"
                android:gravity="center_vertical"
                android:background="@null"
                android:text="null"
                android:textSize="16sp"/>
        </LinearLayout>
        <View
            android:id="@+id/view4"
            android:layout_width="fill_parent"
            android:layout_height="4px"
            android:background="?android:attr/listDivider"/>

        <LinearLayout
            android:id="@+id/lv_qianming"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_qianming"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:text="个性签名："
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/qianming1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="150dp"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="null"
                android:textSize="16sp" />
        </LinearLayout>
        <View
            android:id="@+id/view5"
            android:layout_width="fill_parent"
            android:layout_height="4px"
            android:background="?android:attr/listDivider"/>

        <LinearLayout
            android:id="@+id/lv_from"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"

            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_from"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:text="地区"
                android:textSize="17sp"/>

            <TextView
                android:id="@+id/from1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="150dp"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="null"
                android:textSize="17sp" />
        </LinearLayout>
        <View
            android:id="@+id/view6"
            android:layout_width="fill_parent"
            android:layout_height="4px"
            android:background="?android:attr/listDivider"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/lv_information">

        <Button
            android:id="@+id/btn_send"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="发消息"
            android:textColor="#fff"
            android:background="@color/colorPrimary"
            android:textSize="18sp"/>

    </LinearLayout>
</RelativeLayout>